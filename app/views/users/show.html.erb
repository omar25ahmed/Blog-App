<main class="container">
  <%= render "user" %>
  <div class=" border border-secondary mt-3">
    Bio: <%= @user.bio %>
  </div>
  <% @user.most_recent_posts.each do |post|%>
    <div class="border border-secondary mt-5 p-3">
      <h3><%= link_to post.title, user_post_path(user_id: @user.id, id: post.id ) %></h3>
      <div class="d-flex justify-content-between">
        <p><%= post.brief_description %></p>
        <p class="mt-3">comments: <%= post.comments_counter || 0 %> , Likes: <%=post.likes_counter || 0 %></p>
      </div>
    </div>
  <% end %>
  <%= link_to 'See all posts', user_posts_path(user_id: @user.id) %>
</main>
